{
  "name": "flightctl",
  "version": "0.0.0",
  "description": "Monorepo for flightctl UI",
  "repository": "https://github.com/flightctl/flightctl-ui.git",
  "homepage": "https://github.com/flightctl/flightctl-ui.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./libs/ui-components",
    "./libs/types",
    "./libs/cypress",
    "./apps/ocp-plugin",
    "./apps/standalone"
  ],
  "scripts": {
    "prebuild": "rimraf **/dist",
    "dev": "npm run -w @flightctl/standalone dev",
    "dev:ocp": "npm run -w @flightctl/ocp-plugin dev",
    "build": " npm run build:libs && npm run -w @flightctl/standalone build",
    "build:ocp": "npm run build:libs && npm run -w @flightctl/ocp-plugin build",
    "build:libs": "npm run -w @flightctl/types build && npm run -w @flightctl/ui-components build",
    "test": "npm run -w @flightctl/ui-components test",
    "integration-tests:ci": "npm run -w @flightctl/ui-tests-cypress integration-tests:ci",
    "integration-tests:open": "npm run -w @flightctl/ui-tests-cypress integration-tests:open",
    "lint": "eslint \"{libs,apps}/*/src/**/*.{js,jsx,ts,tsx}\" && prettier --check \"{libs,apps}/*/src/**/*.{js,jsx,ts,tsx}\" && npm run i18n",
    "format": "prettier --check --write \"{libs,apps}/*/src/**/*.{js,jsx,ts,tsx}\"",
    "i18n": "i18next \"{libs,apps}/*/src/**/*.{js,jsx,ts,tsx}\" [-oc] -c i18next-parser.config.js && git diff --exit-code locales/en/translation.json"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "^29.5.3",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "rimraf": "^5.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.44.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.2",
    "webpack-cli": "^5.1.4",
    "i18next-parser": "6.5.0"
  }
}
